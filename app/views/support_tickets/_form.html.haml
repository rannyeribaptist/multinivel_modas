-# frozen_string_literal: true
= simple_form_for(@support_ticket) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :ticket
    = f.input :filled_by
    = f.association :purchase

  .form-actions
    = f.button :submit
