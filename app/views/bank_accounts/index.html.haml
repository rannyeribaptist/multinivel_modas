.section
  .section__content
    %h1 Listing bank_accounts

    .table
      %table
        %thead
          %tr
            %th Banco
            %th Agência
            %th Conta
            %th Tipo
            %th Títular
            %th
            %th
            %th

        %tbody
          - @bank_accounts.each do |bank_account|
            %tr
              %td= bank_account.bank
              %td= bank_account.agency
              %td= bank_account.account_number
              %td= bank_account.kind
              %td= bank_account.owner
              %td= link_to 'Ver', bank_account
              %td= link_to 'Editar', edit_bank_account_path(bank_account)
              %td= link_to 'Excluir', bank_account, method: :delete, data: { confirm: 'Are you sure?' }

    %br

    = link_to new_bank_account_path do
      %button.button.button--green Adicionar conta bancária
