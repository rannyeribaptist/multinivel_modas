-# frozen_string_literal: true
= simple_form_for(@purchase_order) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :product
    = f.input :quantity
    = f.input :status

  .form-actions
    = f.button :submit
