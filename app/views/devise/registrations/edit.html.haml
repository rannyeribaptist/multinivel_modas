= show_flash_messages
.section
  .section__content
    %h1.title Editar login

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "fancy-form" }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: true, autofocus: true, label: "E-mail"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password,                                     |
          hint: "Deixe em branco se não quiser editar sua senha", |
          required: false,                                       |
          input_html: { autocomplete: "new-password" }, label: "Nova senha"
        = f.input :password_confirmation,              |
          required: false,                             |
          input_html: { autocomplete: "new-password" }, label: "Confirmar nova senha"
        = f.input :current_password,                                     |
          hint: "Precisamos da sua senha para alterar essas informações", |
          required: true,                                                |
          input_html: { autocomplete: "Senha atual" }, label: "Senha atual"
      .form-actions
        %button{type: "submit", class: "button button--full-width button--green"} Salvar
