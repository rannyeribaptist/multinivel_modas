-# frozen_string_literal: true
= simple_form_for(@assemble_order) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :purchase
    = f.association :user
    = f.input :status

  .form-actions
    = f.button :submit
